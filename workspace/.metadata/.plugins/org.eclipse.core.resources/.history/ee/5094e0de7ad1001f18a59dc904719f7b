	<h1>GET / POST 예제</h1>
	<form action="handler" method="get">
		<label for="name">이름(GET) : </label>
		<input type="text" id="name" name="userName" placeholder="이름 입력">
		<button type="submit">GET 요청</button>
	</form>
	
	<form action="handler" method="post"></form>
		<label for="email">이메일(POST) : </label>
		<input type="email" id="email" name="email">
		<button type="submit">POST 요청</button>
	</form>
	
	<h1>forward / redirect 예제</h1>
	<form action="forwardHandler" method="post">
		<label for="forwardName">Forward 이용 : </label>
		<input type="text" id="forwardName" name="forwardName"><br>
		<button type="submit">Forward 요청</button>
	</form>
	
	<form action="redirectHandler" method="post">
		<label for="redirectdName">Redirect 이용 : </label>
		<input type="text" id="redirectName" name="redirectdName"><br>
		<button type="submit">Redirect 요청</button>
	</form>
	
